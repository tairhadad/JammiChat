<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog_encrypte">

    <ImageButton
        android:id="@+id/exit"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:src="@drawable/decrypt" />

    <TextView
        android:id="@+id/message_num"
        android:layout_width="194dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="210dp"
        android:text="Enter message number: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/input_message_number"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="19dp"
        android:hint="Enter number.."
        android:padding="15dp" />

    <EditText
        android:id="@+id/key"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="9dp"
        android:hint="Enter key.." />

    <TextView
        android:id="@+id/decrypted"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="233dp"
        android:text="Enter key: "
        android:textSize="20sp" />

    <Button
        android:id="@+id/decrypte"
        android:layout_width="107dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="158dp"
        android:text="decrypte" />

    <TextView
        android:id="@+id/TextDecrypte"
        android:layout_width="381dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="443dp"
        android:layout_marginEnd="9dp"
        android:text="The decrypted message is: "
        android:textSize="20sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/TextDec"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:inputType=""
        android:text="Name"
        android:visibility="invisible" />
</RelativeLayout>